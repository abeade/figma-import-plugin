<idea-plugin>
  <id>com.abeade.plugin.figma.import</id>
  <name>Import figma resources</name>
  <version>1.0.2</version>
  <vendor email="albert.beade@letgo.com" url="https://github.com/abeade/figma-import-plugin">Me</vendor>

  <description><![CDATA[
      Import figma resources to dpi resource folders.<br>
    ]]></description>

  <change-notes><![CDATA[
      Fixes issue importing xxxhdpi resources.<br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action id="abeade.figma.ImportDialog" class="com.abeade.plugin.figma.ImportDialogAction" text="Import figma resources"
            description="Import figma resources from zip file to dpi folders">
      <add-to-group group-id="ProjectViewPopupMenu"  anchor="last"/>
    </action>
  </actions>

</idea-plugin>
